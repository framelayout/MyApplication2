<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="@drawable/linbacktop_selector"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout
            android:id="@+id/butonfragment_orderslin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/butonfragment_ordersicon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/orders_onclick" />

            <TextView
                android:id="@+id/butonfragment_orderstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="寄快递"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/butonfragment_auditlin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/butonfragment_auditicon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/audit_normal" />

            <TextView
                android:id="@+id/butonfragemnt_audittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我要买"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/butonfragment_userdata"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/butonfragment_userdataicon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/userdata" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/butonfragment_urllin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/butonfragment_urlicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/urlsj_icon_normal" />

            <TextView
                android:id="@+id/butonfragment_urltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/butonfragment_userlin"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/butonfragemnt_usericon"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/user_normal" />

            <TextView
                android:id="@+id/butonfragment_usertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个人中心"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
