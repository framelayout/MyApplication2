<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparemt"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/orderpay_nomeynumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextback"
            android:gravity="center"
            android:hint="输入金额"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/paydialog_wx"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linbacktop_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/wxsdkicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="微信支付"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/orderpay_wx"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/true_icon" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/paydialog_alipy"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/linbackbot_selector"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/msp_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="支付宝支付"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/orderpay_alipay"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/false_icon" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:weightSum="2">

            <Button
                android:id="@+id/orderpayleft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="@drawable/buton_selector"
                android:text="取消"
                android:textColor="@drawable/textcolor_white"
                android:textSize="16sp"></Button>

            <Button
                android:id="@+id/orderpayright"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/buton_selector"
                android:text="支付"
                android:textColor="@drawable/textcolor_white"
                android:textSize="16sp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
