<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deliverymap_linshowpop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/headlinlayou"></include>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <HorizontalScrollView
                android:id="@+id/delivermapview_holistview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <com.bn.yfc.base.BaseLinearLayout
                    android:id="@+id/deliverymaptest_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp">


                    <LinearLayout
                        android:id="@+id/deliverymap_but1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/audit_but_onclick"
                            android:text="摩托车"
                            android:textSize="14sp"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="三轮车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="顺路送"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="轿车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="小面包车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="中面包车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="小货车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb8"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="中货车"></Button>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/deliverymap_but9"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb9"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="大货车"></Button>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/deliverymap_but10"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/deliverymap_butb10"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/butbackwith"
                            android:text="船运"></Button>
                    </LinearLayout>
                </com.bn.yfc.base.BaseLinearLayout>

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deliverymap_expand"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/expand_selector" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.amap.api.maps.TextureMapView
            android:id="@+id/deliverymap_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"></com.amap.api.maps.TextureMapView>
    </LinearLayout>

</LinearLayout>