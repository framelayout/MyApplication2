<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/heanactivitylayou"></include>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">

        <com.amap.api.maps.MapView
            android:id="@+id/selectaddress_mapview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.amap.api.maps.MapView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="10">

            <AutoCompleteTextView
                android:id="@+id/selectaddress_selt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7.8"
                android:background="@drawable/selectaddressback"
                android:hint="选择地址"
                android:minHeight="30dp"
                android:paddingLeft="4dp"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.2"
                android:gravity="center"
                android:paddingLeft="4dp"
                android:paddingRight="2dp">

                <Button
                    android:id="@+id/selectaddress_but"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/buton_selector"
                    android:paddingRight="2dp"
                    android:text="确定"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>