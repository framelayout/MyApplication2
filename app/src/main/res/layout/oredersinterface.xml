<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/headlinlayou"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/orders_all"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@drawable/audit_but_onclick"
                android:text="全部"
                android:textColor="@color/colorSkyBlue" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/orders_geton"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@color/colorWhite"
                android:text="进行中"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/orders_nego"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@color/colorWhite"
                android:text="待协商"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/orders_crrayout"
                android:layout_width="70dp"
                android:layout_height="28dp"
                android:background="@color/colorWhite"
                android:text="已完成"
                android:textColor="@color/colorBlack" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <ListView
            android:id="@+id/orders_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/colorTransparemt"></ListView>
    </LinearLayout>
</LinearLayout>